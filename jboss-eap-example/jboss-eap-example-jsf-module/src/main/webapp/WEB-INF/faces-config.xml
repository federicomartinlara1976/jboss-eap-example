<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.1"
	xmlns="http:/faces//faces/java.sun.com/faces/xml/faces/ns/faces/javaee"
	xmlns:xi="http:/faces//faces/www.w3.org/faces/2001/faces/XInclude"
	xmlns:xsi="http:/faces//faces/www.w3.org/faces/2001/faces/XMLSchema-instance"
	xsi:schemaLocation="http:/faces//faces/java.sun.com/faces/xml/faces/ns/faces/javaee http:/faces//faces/java.sun.com/faces/xml/faces/ns/faces/javaee/faces/web-facesconfig_2_1.xsd">
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>secure-dashboard</from-outcome>
			<to-view-id>/secure/dashboard.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>profile</from-outcome>
			<to-view-id>/secure/profile.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>send-jms</from-outcome>
			<to-view-id>/secure/send-jms.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<application>
		<locale-config>
			<default-locale>es</default-locale>
		</locale-config>
	
		<resource-bundle>
			<base-name>net.bounceme.chronos.app.MessageBundle</base-name>
			<var>res</var>
		</resource-bundle>
		
	</application>
	
</faces-config>
