<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" 
         xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee 
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    
    <display-name>Mi Aplicación EAP</display-name>
    
    <!-- Filtros -->
    <filter>
        <filter-name>LoggerFilter</filter-name>
        <filter-class>net.bounceme.chronos.filter.LoggerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoggerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>TokenCaptureFilter</filter-name>
        <filter-class>net.bounceme.chronos.filter.TokenCaptureFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TokenCaptureFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Configuración JSF -->
    <context-param>
        <param-name>jakarta.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    
    <context-param>
        <param-name>jakarta.faces.FACELETS_REFRESH_PERIOD</param-name>
        <param-value>2</param-value>
    </context-param>
    
    <context-param>
        <param-name>jakarta.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    
    <!-- Configuración Primefaces -->
    <context-param>
        <param-name>primefaces.FONT_AWESOME</param-name>
        <param-value>true</param-value>
    </context-param>
    
    <context-param>
        <param-name>primefaces.CLIENT_SIDE_VALIDATION</param-name>
        <param-value>true</param-value>
    </context-param>
    
    <context-param>
	    <param-name>primefaces.THEME</param-name>
	    <!-- Opciones populares: -->
	    <param-value>saga</param-value>       <!-- Tema claro (default) -->
	    <!-- <param-value>arya</param-value>     Tema oscuro -->
	    <!-- <param-value>vela</param-value>     Tema azul -->
	    <!-- <param-value>nova-colored</param-value> Tema colorido -->
	    <!-- <param-value>luna-amber</param-value>   Tema ámbar -->
	</context-param>
    
    <!-- Servlet JSF -->
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>jakarta.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    
    <!-- Security Constraints para páginas protegidas -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Secure Pages</web-resource-name>
            <url-pattern>/secure/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin Pages</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    
    <!-- Páginas públicas -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Public Pages</web-resource-name>
            <url-pattern>/index.xhtml</url-pattern>
            <url-pattern>/public/*</url-pattern>
            <url-pattern>/resources/*</url-pattern>
            <url-pattern>*.xhtml</url-pattern>
        </web-resource-collection>
    </security-constraint>

    <!-- Login Config for OIDC -->
    <login-config>
        <auth-method>OIDC</auth-method>
    </login-config>

    <!-- Error Pages -->
    <error-page>
        <error-code>403</error-code>
        <location>/access-denied.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/404.xhtml</location>
    </error-page>

    <!-- Security Roles -->
    <security-role>
        <role-name>user</role-name>
    </security-role>
    <security-role>
        <role-name>admin</role-name>
    </security-role>

    <!-- Session Config -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure>
        </cookie-config>
    </session-config>
</web-app>